#include <iostream>
using namespace std;
int main() {
	int tc;
	cin>>tc;
	while(tc--)
	{
		int n;
		cin>>n;
		int arr[n];
		int c=0,p=0;
		for(int i=0;i<n;i++)
		{
			cin>>arr[i];
			if(arr[i]&1)
			{
				p++;
			}
			else
			{
				c++;
			}
		}
		if(p&1 && c&1)
		{
			cout<<0<<endl;
		}
		else
		{
			cout<<1<<endl;
		}
	}
}
